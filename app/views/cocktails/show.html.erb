<h1><%= @cocktail.name %></h1>
<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %></li>
  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
</ul>
<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to 'Back to List', cocktails_path, class: 'btn btn-primary' %>


